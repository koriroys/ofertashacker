<ul>
  <% if company.has_website? %>
    <li><%= link_to "#{truncate(company.website, :length => 30)}", (company.formatted_website), :target => :_blank%></li>
  <% end %>
  <% if company.has_contact_email? %>
    <li> <%= mail_to company.contact_email, truncate(company.contact_email, :length => 30)%> </li>
  <% else %>
    <li> <%= mail_to company.email, truncate(company.email, :length => 30)%> </li>
  <% end %>
  <% if company.has_twitter? %>
    <li> <%= link_to "#{truncate(company.twitter_text, :length => 30)}", (company.formatted_twitter), :target => :_blank%> </li>
  <% end %>
  <% if company.has_facebook? %>
    <li> <%= link_to "#{truncate(company.facebook_text, :length =>30)}", (company.formatted_facebook), :target => :_blank%> </li>
  <%end%>
</ul>

